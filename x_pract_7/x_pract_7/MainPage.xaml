<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="x_pract_7.MainPage">

    <StackLayout>
        <Label Text="Напоминалка" TextColor="#FA8D00" FontSize="60" HorizontalOptions="CenterAndExpand"/>
        <Label Text="Дата:" TextColor="Black" FontSize="40" HorizontalOptions="CenterAndExpand"/>
        <DatePicker x:Name="datePicker" Format="dd.MM.yyyy" HorizontalOptions="CenterAndExpand" FontSize="50"/>
        <Label Text="Время:" TextColor="Black" FontSize="40" HorizontalOptions="CenterAndExpand"/>
        <TimePicker x:Name="timePicker" Format="HH:mm" HorizontalOptions="CenterAndExpand" FontSize="50"/>
        <Label Text="Сообщение:" TextColor="Black" FontSize="40" HorizontalOptions="CenterAndExpand"/>
        <Entry x:Name="ent_Message" FontSize="30"/>
        <Button x:Name="btn_Set" Text="Установить" FontSize="25" BorderWidth="2" BorderColor="Aqua" BackgroundColor="White" BorderRadius="20" HorizontalOptions="CenterAndExpand" Clicked="btn_Set_Clicked"/>
        <Button x:Name="btn_Reset" Text="Сбросить" FontSize="25" BorderWidth="2" BorderColor="Aqua" BackgroundColor="White" BorderRadius="20" HorizontalOptions="CenterAndExpand" Clicked="btn_Reset_Clicked"/>

    </StackLayout>

</ContentPage>
